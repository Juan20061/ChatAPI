<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatAPI.MainPage">

    <StackLayout Padding="20">
        <Label Text="Mensaje para ChatGPT" FontSize="20" />
        <Entry x:Name="MessageEntry" Placeholder="Escribe tu mensaje aquí" />

        <Button Text="Enviar" Clicked="Button_Clicked" />

        <Label x:Name="ResponseLabel" FontSize="20" Margin="10,20,0,0" />
    </StackLayout>

</ContentPage>
